set nocompatible

" Indentation Options
set autoindent
set expandtab
set shiftround
set smarttab
set shiftwidth=4
set tabstop=4

" Search Options
set hlsearch
set ignorecase
set smartcase

" Filetype Options
filetype on
filetype plugin on
filetype indent on
syntax on
set nofixeol
set nofixendofline

" Performance Options
set complete=i
set lazyredraw

" UI Options
set number
set cursorline
set expandtab
set nobackup
set scrolloff=15
set nowrap
set showcmd
set showmode
set showmatch
set history=1000
set wildmenu
set wildmode=list:longest
set colorcolumn=80
